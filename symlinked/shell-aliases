# rsync commands for backing up computers to different servers
alias slvrback="rsync -az --delete --exclude-from '.rsync_exclude' Documents namira:backup/; rsync -az --delete --exclude-from '.rsync_exclude' Games namira:backup/; rsync -az --delete --exclude-from '.rsync_exclude' Movies namira:backup/; rsync -az --delete --exclude-from '.rsync_exclude' Music namira:backup/; rsync -az --delete --exclude-from '.rsync_exclude' Pictures namira:backup/; rsync -az --delete --exclude-from '.rsync_exclude' Developer namira:backup/"
alias meduback="rsync -az --delete --progress --exclude-from '~/.rsync-exclude' --exclude "/.*" --exclude "eigen_*" --exclude "me_*" --exclude "*_DS_*" --exclude "symmetries/" --exclude "logfiles/" --exclude "*_check/" /home/sma/ aida:/data2/sma/backup; rsync -az --delete --progress --exclude-from '~/.rsync-exclude' /homee/sma/bundles aida:/data2/sma/backup"

